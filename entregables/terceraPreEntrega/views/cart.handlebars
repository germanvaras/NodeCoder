<div class="productsContainer">
    <h1>Cart</h1>
    {{#if productsInCart}}
    <div class="productsInCart">
        <table>
            {{#each productsInCart}}
            <thead>
                <tr>
                    <th></th>
                    <th>
                        <p>Producto</p>
                    </th>
                    <th>
                        <p>Cantidad</p>
                    </th>
                    <th>
                        <p>Precio</p>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr class="product{{this.product._id}}">
                    <td>
                        <img class="cartProductImg" src="{{this.product.thumbnail}}" alt="{{this.product.title}}">
                    </td>
                    <td>
                        <p>{{this.product.title}}</p>
                    </td>
                    <td>
                        <div class="containerQuantity">
                            <button onclick="minusQuantity('{{this.product._id}}')" class="cardButton">
                                -
                            </button>
                            <p class="quantity">{{this.quantity}}</p>
                            <button onclick="plusQuantity('{{this.product._id}}')" class="cardButton">
                                +
                            </button>
                        </div>
                    </td>
                    <td>
                        <p>${{this.product.price}}</p>
                    </td>
                    <td><button class="cardButton"
                            onclick="deleteProductInCart('{{this.product._id}}')">Eliminar</button></td>
                </tr>
            </tbody>
            {{/each}}
        </table>
        <div class="buttonCartContainer">
            <button class="buttonBlack" onclick="deleteProductsInCart()">Vaciar Carrito</button>
        </div>
        <div class="buttonCartContainer">
            <button class="buttonBlack"><a class="linkForm" href="http://localhost:4200/api/products">Volver a Home</a></button>
        </div>
    </div>

    {{else}}
    <div class="emptyCartContainer">
        <h3 class="emptyTitle">No hay productos en el carrito :(</h3>
        <div class="buttonCartContainer">
            <button class="buttonBlack"><a class="linkForm" href="http://localhost:4200/api/products">Volver a Home</a></button>
        </div>
    </div>

    {{/if}}
</div>
<script src="/js/cart.js"></script>